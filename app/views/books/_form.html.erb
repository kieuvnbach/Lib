<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800 mb-4">
      <h2 class="text-lg font-semibold mb-3">
        <%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:
      </h2>

      <ul class="list-disc leading-relaxed">
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div class="mb-6">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Author -->
  <div class="mb-6">
    <%= form.label :author, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :author, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Year -->
  <div class="mb-6">
    <%= form.label :year, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :year, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Available -->
  <div class="mb-6">
    <%= form.label :available, class: "block text-sm font-medium text-gray-700" %>
    <%= form.check_box :available, class: "mt-1" %>
    <span class="text-sm text-gray-600 ml-2">Available</span>
  </div>

  <!-- Category -->
  <div class="mb-6">
    <%= form.label :category_id, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name', book.category_id), {}, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <!-- Image -->
  <div class="mb-6">
    <%= form.label :image, class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :image, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit class: "bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div class="mt-4">
    <% if book.persisted? %>
      <%= link_to "Cancel", book, class: "text-neutral-700 underline inline-block ml-3" %>
    <% else %>
      <%= link_to "Cancel", books_path, class: "text-neutral-700 underline inline-block ml-3" %>
    <% end %>
  </div>
<% end %>
