<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Member</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to members_path, class: button_class(theme: "transparent") do %>
      All Members
      <% end %>
      <%= link_to edit_member_path(@member), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @member.name %></p>
      </li>
      <li>
        <p class="font-semibold">Email:</p>
        <p><%= @member.email %></p>
      </li>
      <li>
        <p class="font-semibold">Phone:</p>
        <p><%= @member.phone %></p>
      </li>
      <li>
        <p class="font-semibold">Address:</p>
        <p><%= @member.address %></p>
      </li>
      <li>
        <p class="font-semibold">Membership date:</p>
        <p><%= @member.membership_date %></p>
      </li>
      <li>
        <p class="font-semibold">Membership type:</p>
        <p><%= @member.membership_type %></p>
      </li>
  </ul>
</div>
