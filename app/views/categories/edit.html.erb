<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit Category</h1>

    <% if @category.persisted? %>
      <%= button_to 'Destroy', @category, method: :delete, class: "text-red-500 hover:text-red-700 font-bold underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', category: @category %>
</div>
